<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PokemonDetailPage">

    <TextView
        android:id="@+id/detail_page_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title_text"
        android:textSize="30sp"
        android:padding="10sp"
        />

    <ImageView
        android:id="@+id/detail_page_image_view"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/detail_page_title_text"
        tools:background="@android:color/holo_blue_dark"
        android:contentDescription="@string/detail_page_pokemon_image_content_description"
        />

        <TextView
        android:id="@+id/detail_page_hp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pre_hp_text"
        android:layout_below="@id/detail_page_image_view"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/detail_page_speed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pre_speed_text"
        android:layout_below="@id/detail_page_hp_text"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/detail_page_special_defense_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pre_special_defense_text"
        android:layout_below="@id/detail_page_speed_text"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/detail_page_special_attack_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pre_special_attack_text"
        android:layout_below="@id/detail_page_special_defense_text"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/detail_page_defense_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pre_defense_text"
        android:layout_below="@id/detail_page_special_attack_text"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/detail_page_attack_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pre_attack_text"
        android:layout_below="@id/detail_page_defense_text"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/detail_page_base_experience_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pre_base_experience_text"
        android:padding="5dp"
        android:layout_below="@id/detail_page_attack_text"
        />

    <ProgressBar
        android:id="@+id/detail_page_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@id/detail_page_base_experience_text"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:indeterminate="true"

        />

</RelativeLayout>
