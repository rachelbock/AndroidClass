<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    >
    <ImageView
        android:id="@+id/homework2_pokemon_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        tools:background="@android:color/holo_green_dark"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:id="@+id/homework2_pokemon_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="@string/row_pokemon_id_text"
        android:textSize="45sp"
        android:paddingEnd="20dp"
        />

    <TextView
        android:id="@+id/homework2_pokemon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/row_pokemon_name_text"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        android:layout_toEndOf="@id/homework2_pokemon_id"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/homework2_pokemon_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/row_pokemon_weight_text"
        android:layout_toEndOf="@id/homework2_pokemon_id"
        android:layout_below="@id/homework2_pokemon_name"
        android:padding="5dp"
        />

    <TextView

        android:id="@+id/homework2_pokemon_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/row_pokemon_height_text"
        android:layout_below="@id/homework2_pokemon_name"
        android:layout_toEndOf="@id/homework2_pokemon_weight"
        android:padding="5dp"
        />


</RelativeLayout>